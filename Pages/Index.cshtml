<script>
    // Lägg till eller ta bort klassen 'scrolled' vid scroll
    window.addEventListener('scroll', function () {
        const header = document.querySelector('.main-header');
        const scrollThreshold = 120; // Antal pixlar innan headern blir genomskinlig
    
        if (window.scrollY > scrollThreshold) {
            header.classList.add('scrolled'); // Blir lite genomskinlig
        } else {
            header.classList.remove('scrolled'); // Återgår till solid svart
        }
    });

</script>
